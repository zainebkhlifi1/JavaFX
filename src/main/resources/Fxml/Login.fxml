<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="login_container" stylesheets="@../Styles/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.espritevent.Controllers.LoginController">
   <VBox prefHeight="400.0" prefWidth="200.0" styleClass="login_logo_container" stylesheets="@../Styles/login.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Esprit Event" />
   </VBox>
   <VBox layoutX="231.0" layoutY="100.0" prefHeight="350.0" prefWidth="350.0" styleClass="login_form_container" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="login_form_container_title" text="Log in" />
      <Label text="Username" />
      <TextField fx:id="username_fid" styleClass="input_field" />
      <Label text="Password" />
      <TextField fx:id="password_fid" styleClass="input_field" />
      <Button fx:id="login_btn" mnemonicParsing="false" text="Log in" />
      <Button fx:id="signup_btn" mnemonicParsing="false" prefHeight="32.0" prefWidth="215.0" styleClass="signup_button" text="Sign up">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
      <Text fx:id="error_lbl" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="error_label" />
   </VBox>
</AnchorPane>
